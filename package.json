{
  "name": "empty-app",
  "version": "0.1.0",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "private": true,
  "scripts": {
    "server": "yarn workspace server",
    "client": "yarn workspace client",
    "sync": "rsync -avzr client/build root@anmmedia.am:~/anm/${ANM_ENV:?}/web/ --delete",
    "push": "yarn client build && yarn sync",
    "pull": "git fetch;git reset --hard origin/${ANM_ENV:?};git checkout ${ANM_ENV:?};git pull;yarn install;"
  },
  "workspaces": [
    "server",
    "client"
  ]
}
